<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KaiSeki.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

             <Label
                Text="Input the Japanese sentence you wish to analyse"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry
                x:Name="SentenceEntry"
                Placeholder="面倒事が嫌いだから逆らいはしないものの、トワ自身は生活を改める気など全くなかった。"
                HorizontalOptions="Center"/>

            <Button
                x:Name="Button"
                Text="Click Me!"
                SemanticProperties.Hint="Gets restaurant recommendations when you click"
                Clicked="OnButtonClicked"
                HorizontalOptions="Center" />

            <Label x:Name="SmallLabel"
                   Text="面倒事が嫌いだから逆らいはしないものの、トワ自身は生活を改める気など全くなかった。"
                   SemanticProperties.HeadingLevel="Level2"
                   FontSize="18"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

